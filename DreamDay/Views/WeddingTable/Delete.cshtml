@model DreamDay.Models.WeddingTable

@{
    ViewData["Title"] = "Delete Table";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Delete Table</h1>

    <div class="alert alert-danger text-center">
        <h4>Are you sure you want to delete table <strong>@Model.TableName</strong>?</h4>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="TableId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/WeddingTable" class="btn btn-secondary">Cancel</a>
    </form>
</div>
