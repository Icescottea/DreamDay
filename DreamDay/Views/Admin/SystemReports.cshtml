@{
    ViewData["Title"] = "System Reports";
}

<div class="container my-5">
    <h1 class="text-center mb-4">System Reports</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4 p-3">
                <h4>User Statistics</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Couples: <strong>@ViewBag.CoupleCount</strong></li>
                    <li class="list-group-item">Planners: <strong>@ViewBag.PlannerCount</strong></li>
                    <li class="list-group-item">Admins: <strong>@ViewBag.AdminCount</strong></li>
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4 p-3">
                <h4>Wedding Statistics</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Total Weddings: <strong>@ViewBag.WeddingCount</strong></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="card shadow-sm p-3 mt-4">
        <h4>Vendor Statistics by Category</h4>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Category</th>
                    <th>Number of Vendors</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.VendorSummary)
                {
                    <tr>
                        <td>@item.Category</td>
                        <td>@item.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
