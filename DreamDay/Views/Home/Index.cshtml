@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Full-Screen Background -->
<div class="hero d-flex align-items-center justify-content-center text-center"
     style="background: url('/images/wedding-background.jpg') no-repeat center center; background-size: cover; width: 100%; height: 100vh;">
    <div class="text-white">
        <h1 class="display-3">Plan Your Perfect Wedding with DreamDay</h1>
        <p class="lead">Your journey to a stress-free wedding starts here.</p>
        <a class="btn btn-primary btn-lg m-2" href="#features">Learn More</a>
        <a class="btn btn-outline-light btn-lg m-2" href="/Identity/Account/Login">Login</a>
        <a class="btn btn-light btn-lg m-2" href="/Identity/Account/Register">Register</a>
    </div>
</div>


<!-- Features Section with Icons -->
<div id="features" class="container text-center my-5">
    <h2>Our Features</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <i class="fas fa-users fa-3x mb-3"></i>
            <h4>Manage Guests</h4>
            <p>Keep track of your RSVPs and guest preferences effortlessly.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-coins fa-3x mb-3"></i>
            <h4>Track Budgets</h4>
            <p>Plan and monitor every expense to stay on top of your wedding budget.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-handshake fa-3x mb-3"></i>
            <h4>Collaborate Easily</h4>
            <p>Work with professional planners to organize your big day seamlessly.</p>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="bg-light py-5 text-center">
    <h2>What Our Users Say</h2>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>"DreamDay made our wedding planning smooth and joyful!"</p>
                    <footer class="blockquote-footer">Emily & Daniel</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>"Highly recommend it to any couple — it saved us weeks of stress!"</p>
                    <footer class="blockquote-footer">Sophia & Liam</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>"A planner’s best friend — organized and easy to use."</p>
                    <footer class="blockquote-footer">Planner Amanda</footer>
                </blockquote>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<div class="container text-center my-5">
    <h2>About DreamDay</h2>
    <p class="mt-3">
        DreamDay brings all your wedding planning needs into a single, elegant platform.
        From organizing guests to managing tasks and tracking budgets, we make sure your planning journey is as beautiful as your big day.
    </p>
</div>


<!-- Smooth Scrolling Script -->
<script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
</script>
