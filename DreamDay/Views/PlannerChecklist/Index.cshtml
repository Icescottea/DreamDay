@model IEnumerable<DreamDay.Models.ChecklistItem>

@{
    ViewData["Title"] = "Planner Manage Checklist";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Checklist Items</h1>

    <a class="btn btn-secondary mb-3" href="/PlannerDashboard">Back to Dashboard</a>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No checklist items available.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Task</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.DueDate.ToShortDateString()</td>
                        <td>@(item.IsCompleted ? "Completed" : "Pending")</td>
                        <td>
                            @if (!item.IsCompleted)
                            {
                                <a class="btn btn-sm btn-success" href="/PlannerChecklist/MarkComplete/@item.ItemId?weddingId=@ViewBag.WeddingId">Mark Complete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
