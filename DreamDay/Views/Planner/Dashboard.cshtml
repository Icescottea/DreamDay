@model IEnumerable<DreamDay.Models.WeddingViewModel>

@{
    ViewData["Title"] = "Planner Dashboard";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Planner Dashboard</h1>

    <div class="text-center mb-3">
        <h4>Total Weddings Assigned: @ViewBag.WeddingCount</h4>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No weddings assigned yet.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Couple Names</th>
                    <th>Wedding Date</th>
                    <th>Venue</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var wedding in Model)
                {
                    <tr>
                        <td>@wedding.CoupleEmail</td>
                        <td>@(wedding.WeddingDate?.ToString("yyyy-MM-dd") ?? "Not Set")</td>
                        <td>@wedding.Venue</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="#">View Details</a>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    }
</div>
