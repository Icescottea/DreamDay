@model DreamDay.Models.TimelineEvent

@{
    ViewData["Title"] = "Edit Event";
    var vendors = ViewBag.Vendors as List<DreamDay.Models.Vendor>;
}

<div class="container my-5">
    <h1 class="text-center mb-4">Edit Timeline Event</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="EventId" />

        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label">Event Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EventTime" class="form-label">Event Time</label>
            <input asp-for="EventTime" type="datetime-local" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Select Vendor (Optional)</label>
            <select asp-for="VendorId" class="form-control">
                <option value="">-- No Vendor --</option>
                @foreach (var vendor in vendors)
                {
                    <option value="@vendor.VendorId" selected="@(vendor.VendorId == Model.VendorId ? "selected" : null)">
                        @vendor.Name
                    </option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="VendorArrivalTime" class="form-label">Vendor Arrival Time (Optional)</label>
            <input asp-for="VendorArrivalTime" type="datetime-local" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
