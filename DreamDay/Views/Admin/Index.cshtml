@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h3>@ViewBag.UserCount</h3>
                <p>Registered Users</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h3>@ViewBag.WeddingCount</h3>
                <p>Weddings</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h3>@ViewBag.VendorCount</h3>
                <p>Vendors</p>
            </div>
        </div>
    </div>

    <div class="text-center my-4">
        <a class="btn btn-primary m-2" href="/Admin/ManageUsers">Manage Users</a>
        <a class="btn btn-primary m-2" href="/Admin/ManageVendors">Manage Vendors</a>
        <a class="btn btn-primary m-2" href="/Admin/SystemReports">View System Reports</a>
    </div>
</div>
